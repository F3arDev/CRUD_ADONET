@model List<EstudianteModel>
@{
	ViewData["Title"] = "Listar";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
	<div class="card-header">
		Lista Estudiante
	</div>
	<div class="card-body">
		<a asp-action="Guardar" asp-controller="Estudiante" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear Nuevo</a>
		<hr />
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>CodEstudiante</th>
					<th>Nombre</th>
					<th>Edad</th>
					<th>CodGrado</th>
					<th>Acciones</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.CodEstudiante</td>
						<td>@item.Nombre</td>
						<td>@item.Edad</td>
						<td>@item.CodGrado</td>
						<td>
							<a asp-action="Editar" asp-controller="Estudiante" class="btn btn-primary btn-sm" asp-route-CodEstudiante="@item.CodEstudiante">Editar</a>
							<a asp-action="Eliminar" asp-controller="Estudiante" class="btn btn-danger btn-sm" asp-route-CodEstudiante="@item.CodEstudiante">Eliminar</a>
						</td>
					</tr>
				}
			</tbody>
		</table>

	</div>
</div>